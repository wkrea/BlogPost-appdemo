@startuml

skinparam interface {
  backgroundColor RosyBrown
  borderColor orange
}

skinparam component {
  FontSize 13
  BackgroundColor<<Apache>> Red
  BorderColor<<Apache>> #FF6655
  FontName Courier
  BorderColor black
  BackgroundColor gold
  ArrowFontName Impact
  ArrowColor #FF6655
  ArrowFontColor #777777
}

node "FrontEnd" {
  [app] ..> () HTTPClient : use
}

cloud {
  [HTTP] <--> HTTPClient
}

node "App.Api" {
  package "Controllers"{
  }
  Controllers ..> Servicios : use
  Controllers ..> HTTP : use
}

node "App.Core" {
  package "Interfaces"{
  }
  package "Servicios"{
  }
  Servicios ..> Interfaces : use
}

node "App.Infra" {
  package "Repositorios"{
  }
  package "Contexto"{
  }

  Repositorios --(0- Interfaces : implements
  Repositorios ..> Contexto : use
  Contexto ..> SqlServer
}

database "SqlServer" {
}

@enduml